#!/bin/sh

prefix="{{DS-ROOT}}"
LD_LIBRARY_PATH=$prefix@nss_libdir@:$prefix@libdir@:@nss_libdir@
export LD_LIBRARY_PATH
SHLIB_PATH=$prefix@nss_libdir@:$prefix@libdir@:@nss_libdir@
export SHLIB_PATH

cd {{SERVER-DIR}}
if [ $# -lt 4 ]
then
	echo "Usage: vlvindex -n backend_instance | {-s includesuffix}* -T attribute"
	echo Note: either \"-n backend_instance\" or \"-s includesuffix\" are required.
	exit 1
fi

./ns-slapd db2index -D {{CONFIG-DIR}} "$@"
