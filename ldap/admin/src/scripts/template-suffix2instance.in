#!/bin/sh

prefix="{{DS-ROOT}}"
LD_LIBRARY_PATH=$prefix/{{SERVER-DIR}}:$prefix@nss_libdir@:$prefix@libdir@:@nss_libdir@
export LD_LIBRARY_PATH
SHLIB_PATH=$prefix/{{SERVER-DIR}}:$prefix@nss_libdir@:$prefix@libdir@:@nss_libdir@
export SHLIB_PATH

cd {{SERVERBIN-DIR}}
if [ $# -lt 2 ]
then
	echo Usage: suffix2instance {-s includesuffix}*
	exit 1
fi

./ns-slapd suffix2instance -D {{CONFIG-DIR}} "$@" 2>&1
